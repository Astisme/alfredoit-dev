---
type pagesType = {
	title: string;
	text: string;
};
type pagesJsonType = {
	[pageId: string]: pagesType;
};

export function getPage(path: string | number | undefined) {
const pages: pagesJsonType = {
	undefined: {
		title: "Main",
		text: "Welcome to the main page",
	},
	page1: {
		title: "Page 1",
		text: "This is page 1",
	},
};
	let page: pagesType | undefined = undefined;
	if (path === undefined) page = pages.undefined;
	else page = pages[path];
	// if (!page) {
	// 	// return redirectUser("/404");
	// 	return Astro.redirect("/404");
	// }
	return page;
}
