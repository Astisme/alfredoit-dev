---
export interface Props {
	locale?: string;
}
const locale = Astro.props?.locale ?? Astro.currentLocale;
const relativePage = Astro.url.pathname.slice(1);

import { getRelativeLocaleUrl } from 'astro:i18n';
const rootPage = getRelativeLocaleUrl(locale, "/").substring(1);
const isOnRootPage = rootPage === relativePage;
const repoPage = isOnRootPage ? `${locale}/index.mdx` : `${relativePage.substring(0, relativePage.length-1)}.mdx`

import { REPO_URL } from "@config";
const repo = `${REPO_URL}/tree/main/src/pages/${repoPage}`

import Href from "@components/body/Href.astro";
---
<Href href={repo}>
  <i class="fa-brands fa-github fa-2xl" ></i>
</Href>
