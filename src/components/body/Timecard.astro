---
export interface Props {
  href: string;
  title: string;
  dateBegin: string;
  dateEnd: string;
}

const { href, title, dateBegin, dateEnd = null } = Astro.props;

import Href from "../Href.astro";
import "../../styles/timecard.css";
---
<div data-datebegin={dateBegin} data-dateend={dateEnd}>
  <div class="timecard">
    {href != null ? 
      <Href href={href}>
      <h3 id={title}>{title} - {dateBegin}</h3>
      </Href>
      :
      <h3 id={title}>{title} - {dateBegin}</h3>
    }

    <article>
      <slot />
    </article>
  </div>
</div>
