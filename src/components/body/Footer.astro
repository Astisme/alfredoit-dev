---
export interface Props {
	lang: string;
}

const { lang } = Astro.props;
const english = lang === 'en' || lang == null;
const rootLink = english ? '/' : '/it';

const thisYear = new Date().getFullYear();
import { WEBSITE_NAME, FAVICON } from "../../config";
import AstroIcon from "../platforms/AstroIcon.astro";
import Deno from "../platforms/Deno.astro";
import Github from "../platforms/Github.astro";
---

<footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
	<div class="col-md-4 d-flex align-items-center">
		<a href={rootLink}
			class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
			<img src={FAVICON} alt="Alfred" width="32" height="32" class="rounded-circle greyscale">
		</a>
		<span class="text-muted">&copy; {thisYear} {WEBSITE_NAME}</span>
	</div>

	<ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
		<li class="ms-3">
      <AstroIcon />
		</li>
		<li class="ms-3">
      <Deno />
		</li>
		<li class="ms-3">
      <Github />
		</li>
	</ul>
</footer>

<style>
	.greyscale {
		-webkit-filter: grayscale(100%);
		filter: grayscale(100%);
	}
</style>
