---
export interface Props {
	lang: string;
}

const { lang } = Astro.props;
const builtWith = lang === "en" ? "Built with Astro" : "Creato con Astro";
const deployedWith = lang === "en" ? "Deployed with Deno" : "Pubblicato con Deno";
const github = lang === "en" ? "Check my GitHub" : "Guarda il mio GitHub";
const thisYear = new Date().getFullYear();
import { WEBSITE_NAME, FAVICON } from "../../config";
---

<footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
	<div class="col-md-4 d-flex align-items-center">
		<a href="/"
			class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
			<img src={FAVICON} alt="Alfred" width="32" height="32" class="rounded-circle greyscale">
		</a>
		<span class="text-muted">&copy; {thisYear} {WEBSITE_NAME}</span>
	</div>

	<ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
		<li class="ms-3">
			<a class="text-muted" href="#">
				{builtWith}
			</a>
		</li>
		<li class="ms-3">
			<a class="text-muted" href="#">
				{deployedWith}
			</a>
		</li>
		<li class="ms-3">
			<a class="text-muted" href="#">
				{github}
			</a>
		</li>
	</ul>
</footer>

<style>
	.greyscale {
		-webkit-filter: grayscale(100%);
		filter: grayscale(100%);
	}
</style>
