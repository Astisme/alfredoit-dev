---
export interface Props {
	lang: string;
}

const { lang } = Astro.props;
const english = lang === 'en' || lang == null;
const rootLink = english ? '/' : '/it';

import Logo from "./Logo.astro"
import AstroIcon from "../platforms/AstroIcon.astro";
import Deno from "../platforms/Deno.astro";
import Github from "../platforms/Github.astro";
import Linkedin from "../platforms/Linkedin.astro";

import "@styles/footer.css";
---

<footer class="row">
  <Logo isNavStr='false' rootLink={rootLink} />

	<ul class="row">
		<li>
      <AstroIcon />
		</li>
		<li>
      <Deno />
		</li>
		<li>
      <Github lang={lang}/>
		</li>
		<li>
      <Linkedin />
		</li>
	</ul>

</footer>
