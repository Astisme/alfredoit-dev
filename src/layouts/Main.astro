---
export interface Props {
	title: string;
	lang: string;
}

import Head from "../components/head/Head.astro";
import Header from "../components/body/Header.astro";
import Footer from "../components/body/Footer.astro";

import { FAVICON } from "../config";

const { title, lang } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <Head favicon={FAVICON} title={title}></Head>
  </head>
  <body>
    -<Header lang={lang} logo={FAVICON}/>
		<slot />
		<Footer lang={lang}/>
  </body>
</html>
