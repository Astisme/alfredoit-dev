---
import type { MarkdownLayoutProps } from 'astro';
type Props = MarkdownLayoutProps <{
  lang: string;
  title: string;
  description: string;
}>;

import BaseHead from '../components/head/BaseHead.astro';
import Header from '../components/body/Header.astro';
import Footer from '../components/body/Footer.astro';
import { FAVICON } from "../config";
import "../styles/aboutme.css";

const { frontmatter } = Astro.props;
const { lang, title, description } = frontmatter;
---

<html lang={lang}>
	<head>
    <BaseHead title={title} description={description} globalStyle="false" />
	</head>

	<body>
		<Header lang={lang} logo={FAVICON} />
		<main>
				<slot />
		</main>
		<Footer lang={lang}/>
	</body>
</html>
